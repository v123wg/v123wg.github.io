                            <p class="display-2 ">回三子雄是<span class="d-none d-sm-block">必生有間朋地</span></p>
                            @Html.ActionLink("Order!", "Menu", "Home", new { @class = "btn btn-outline-success btn-lg" })
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="carousel-item">
            <img src="~/bg/b_2.jpg" alt="" class="d-flex ">
            <div id="area">
                <div class="carousel-caption container-fluid pp">
                    <div class="row ">
                        <div class="col-sm-6 col-12 ">
                            <figure>
                                <img src="~/bg/p_2.png" alt="" class="w-50 h-50 img-fluid">
                            </figure>
                        </div>
                        <div class="col-sm-6 col-12 text-sm-left ">
                            <p class="display-2 ">下車是安之<span class="d-none d-sm-block">錢年系師</span></p>
                            @Html.ActionLink("Order!", "Menu", "Home", new { @class = "btn btn-outline-success btn-lg" })

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/bg/b_1.jpg" alt="" class="d-flex ">
