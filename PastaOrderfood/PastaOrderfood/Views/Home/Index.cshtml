@{
    ViewBag.Title = "Pastas(首頁)";
}

@section css{

    <style>
        .carousel-indicators .ctrlLine {
            width: 10px;
            height: 10px;
            border-radius: 10px;
        }

        body {
            background-color: rgb(41, 43, 44);
        }

        .pp {
            top: -10%;
            left: 0%;
            width: 100%;
            height: 100%;
            padding-top: 16%;
        }

        .carousel-item {
            height: 85vh;
            width: 100%;
        }

            .carousel-item img {
                height: 85vh;
                width: 100%;
            }

        .info {
            height: 15vh;
            width: 100%;
        }

        #area {
            width: 100%;
            /* height: 100vh; */
            height: 100%;
            position: absolute;
            background-color: rgba(0, 0, 0, 0.7);
            z-index: 1;
            top: 0;
            left: 0;
        }

        @@media screen and (max-width: 576px) {
            .pp {
                top: 0%;
                left: 0%;
                width: 100%;
                height: 100%;
                padding-top: 16%;
            }
        }

        .infoArea {
            overflow: hidden;
            margin-bottom: 5%;
        }

            .infoArea img {
                transition: all 0.8s;
                opacity: 0.75;
                filter: brightness(0.8);
                width: 100%;
                height: 100%
            }

                .infoArea img:hover {
                    cursor: pointer;
                    opacity: 1;
                    filter: brightness(1);
                    transform: scale(1.5, 1.5)
                }
    </style>
}
<div class="carousel slide " data-ride="carousel" id="Picshow" data-interval="8000">
    <ul class="carousel-indicators ">
        <li data-target="#Picshow" data-slide-to="0" class="active ctrlLine">
        <li data-target="#Picshow" data-slide-to="1" class="ctrlLine">
        <li data-target="#Picshow" data-slide-to="2" class="ctrlLine">
    </ul>
    <div class="carousel-inner">
        <div class="carousel-item active ">
            <img src="~/bg/b_1.jpg" alt="" class="d-flex ">
