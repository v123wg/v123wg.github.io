@model PastaOrderfood.Models.Pastas

@{
    ViewBag.Title = "ProductManageEdit";
}
@section css{

    <style>
        .centerblock {
            width: 275px;
            margin-left: auto;
            margin-right: auto;
        }
    </style>
}
<div class="container">
    <h2 class="text-center">餐點編輯</h2>
    <div class="text-center">
        @using (Html.BeginForm("ProductManageEdit", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal ">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.rowid)

            <div class="form-group  ">
                @Html.LabelFor(model => model.pasta_name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10  centerblock">
                    @Html.EditorFor(model => model.pasta_name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.pasta_name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group ">
                @Html.LabelFor(model => model.category_id, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 centerblock">
                    @Html.EditorFor(model => model.category_id, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.category_id, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group ">
                @Html.LabelFor(model => model.pasta_quantity, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10  centerblock">
                    @Html.EditorFor(model => model.pasta_quantity, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.pasta_quantity, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group ">
                @Html.LabelFor(model => model.pasta_detail, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10  centerblock">
                    @Html.EditorFor(model => model.pasta_detail, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.pasta_detail, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group  ">
                @Html.LabelFor(model => model.pasta_price, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10  centerblock">
                    @Html.EditorFor(model => model.pasta_price, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.pasta_price, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group ">
                @Html.LabelFor(model => model.pasta_img, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 centerblock">
                    @Html.TextBoxFor(m => m.pasta_img, new { type = "file", name = "ImageFile"})
                    @Html.ValidationMessageFor(model => model.pasta_detail, "", new { @class = "text-danger" })
                    @*<input type="file" name="ImageFile" value="" required>*@
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 centerblock ">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
            <div class="col-md-offset-2 col-md-10 centerblock ">
                @Html.ActionLink("Back to List", "ProductManageIndex")
            </div>
        </div>
        }
    </div>
</div>

